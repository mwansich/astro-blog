---
import '../styles/global.css';
import { getCollection } from "astro:content";
import BaseLayout from '../layouts/BaseLayout.astro';
import BlogPost from '../components/BlogPost.astro';
const pageTitle = "My Astro Learning Blog";
const allPosts = await getCollection("blog");
---

<BaseLayout pageTitle={pageTitle}>
		
    {allPosts.map((post: any) => <BlogPost url={`/posts/${post.id}/`} title={post.data.title} date={post.data.pubDate} image={post.data.image.url} alt={post.data.image.alt} description={post.data.description} author={post.data.author} />)}
    
</BaseLayout>